<% button_name = project.persisted? ? "Edit project" : "Create a project" %>



<%= form_for @project do |f| %>
	<div>
		<%= f.text_field :name %>
	</div>
	<div>
		<%= f.number_field :priority %>
	</div>
	<div>
		<%= f.text_area :description %>
	</div>
	<div>	
		<%= f.submit button_name %>
	</div>
<% end %>